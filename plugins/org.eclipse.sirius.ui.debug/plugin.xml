<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyTabs">
      <propertyTabs contributorId="org.eclipse.sirius.diagram.ui">
          <propertyTab
                category="misc"
                id="property.tab.misc"
                label="%propertyTab.debug.label">
          </propertyTab>
      </propertyTabs>
         
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertySections">
            <propertySections contributorId="org.eclipse.sirius.diagram.ui">
           <propertySection
               class="org.eclipse.sirius.diagram.ui.tools.api.properties.MiscPropertySection"
               filter="org.eclipse.sirius.diagram.ui.tools.api.properties.filter.MiscPropertyFilter"
               id="property.section.misc"
               tab="property.tab.misc">
            <input
                  type="org.eclipse.gef.EditPart">
            </input>
         </propertySection>
           <propertySection
                 class="org.eclipse.sirius.ui.debug.properties.GMFDebugPropertySection"
                 filter="org.eclipse.sirius.diagram.ui.tools.api.properties.filter.MiscPropertyFilter"
                 id="property.section.gmfdebug"
                 tab="property.tab.misc">
              <input
                    type="org.eclipse.gef.GraphicalEditPart">
              </input>
           </propertySection>
       </propertySections>
   </extension>
   <extension
         point="org.eclipse.gmf.runtime.diagram.ui.editpolicyProviders">
      <editpolicyProvider
            class="org.eclipse.sirius.ui.debug.statusline.StatusLineEditPolicyProvider">
         <Priority
               name="Lowest">
         </Priority>
      </editpolicyProvider>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
         <menuContribution
            locationURI="toolbar:org.eclipse.ui.trim.status">
         <toolbar
               id="org.eclipse.sirius.ui.debug.statusline.mouseLocationContribution">
            <control
                  class="org.eclipse.sirius.ui.debug.statusline.MouseLocationContribution"
                  id="contributions.mouseLocationContrib">
            </control>
         </toolbar>
      </menuContribution>
   </extension>
   <extension point="org.eclipse.ui.views">
      <view
            name="%view.siriusDebug.name"
            icon="icons/sample.gif"
            category="org.eclipse.sirius.category"
            class="org.eclipse.sirius.ui.debug.SiriusDebugView"
            id="org.eclipse.sirius.ui.debug.SiriusDebugView">
      </view>
   </extension>
   <extension point="org.eclipse.ui.popupMenus">
     <objectContribution
           id="org.eclipse.sirius.ui.debug.menu.migration.vsm"
           nameFilter="*.odesign"
           objectClass="org.eclipse.core.resources.IFile">
        <action
              class="org.eclipse.sirius.ui.debug.menus.MigrateSiriusModelAction"
              enablesFor="+"
              id="org.eclipse.sirius.ui.debug.menus.migration.vsm"
              label="Migrate VSM"
              menubarPath="additions">
        </action>
     </objectContribution>
     <objectContribution
           id="org.eclipse.sirius.ui.debug.menu.migration.aird"
           nameFilter="*.aird"
           objectClass="org.eclipse.core.resources.IFile">
        <action
              class="org.eclipse.sirius.ui.debug.menus.MigrateSiriusModelAction"
              enablesFor="+"
               id="org.eclipse.sirius.ui.debug.menus.migration.aird"
              label="Migrate aird"
              menubarPath="additions">
        </action>
     </objectContribution>
     <objectContribution
           id="fr.obeo.dsl.viewpoint.tests.vsm.migration.sirius.models"
           nameFilter="*"
           objectClass="org.eclipse.core.resources.IContainer">
        <action
              class="org.eclipse.sirius.ui.debug.menus.MigrateSiriusModelAction"
              enablesFor="+"
              id="org.eclipse.sirius.ui.debug.menus.migration.models"
              label="Migrate Sirius models"
              menubarPath="additions">
        </action>
     </objectContribution>
   </extension>
</plugin>
